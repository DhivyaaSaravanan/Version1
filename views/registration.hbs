            </div>
            <div class="input-control">
                <label for="height">Height(in Centimeter)</label>
                <input id="height"name="height" placeholder="Enter height" type="text" onkeyup="validateheight()">
                <small id="small4"></small>
            </div>
            <label for="gender">GENDER</label><br>
            <input type="radio"  value="male" name="gender_choice" required>
            <label for="gender-male">MALE</label>
            <input type="radio" value="female" name="gender_choice">
            <label for="gender-female">FEMALE</label><br><br>/


