    <div class="container">
        <form id="form"  action="/auth/registration" onsubmit="return demo()" method="post">
            <h1>BOOK NOW</h1>
            <div class="input-control">
                <label>Name</label>
                <input id="uname" name="uname" placeholder="Enter name" type="text"  onkeyup="validatename()">
                  <small id="small1"></small><br>
            </div>
            <div class="input-control">
                <label for="email">Email</label>
                <input id="email" name="email" placeholder="Enter email" type="text"  onkeyup="validateemail()" >
                <small id="small"></small><br>
            </div>
            <div class="input-control">
                <label for="phno">Phone.no</label>
                <input id="phno"name="phno" placeholder="Enter Phone number" type="tel" onkeyup="validatephoneno()">
                <small id="small2"></small><br>
            </div>
            <div class="input-control">
                <label for="age">Date of Birth</label>
                <input id="age"name="age" type="date" required><br>
            </div>
           
