    else if(heightcheck!=(NaN)){
           document.getElementById("small3").innerHTML="Please enter height in number format";
           weight.style.border="2px solid red";
    }
    else{
        document.getElementById("small3").innerHTML="Please enter correct height";
        weight.style.borderColor = "red";

    }

 }
